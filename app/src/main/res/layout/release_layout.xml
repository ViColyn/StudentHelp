<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="填写订单"
        android:textSize="40dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="姓名"

            />
        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Jenny"
            android:textAlignment="center"
            android:id="@+id/name"
            />

        <TextView
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="电话"/>
        <EditText
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="123456789"
            android:textAlignment="center"
            android:id="@+id/pnone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="等待时间"

            />
        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="分钟"
            android:textAlignment="center"
            android:textColorHint="#DEDEDE"
            android:id="@+id/timeWait"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="赠与分数"
            android:textAlignment="center"/>
        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:id="@+id/score"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="取货地址"

            />
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:lines="2"
            android:id="@+id/getDes"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="送货地址"

            />
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:lines="2"
            android:id="@+id/sendDes"
            android:text="华南理工大学生活区C13"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="90dp"
        android:layout_gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="提交"
            android:id="@+id/submit"

            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="取消"
            android:background="#ffff4c06"
            />


    </LinearLayout>



</LinearLayout>